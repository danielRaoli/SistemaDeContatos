@model SistemaDeContatos.Models.ViewModels.RedefinirSenhaViewModel

@{
    Layout = "_LayoutDeslogado";

}
<div class="text-center">
    <h1>Redefinir Senha</h1>
</div>


@if (TempData["alertError"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["alertError"];
    </div>
}

@if (TempData["alertSucess"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["alertSucess"];
    </div>
}

<div class="align-content-center">

<div class="row">
    <form asp-action="Redefinir" asp-controller="Login" method="post">
        <div class="form-group">
            <label for="Login" class="col-form-label">Login</label>
            <input asp-for="Login" class="form-control"/>
                <span asp-validation-for="Login" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Login" class="col-form-label">Email</label>
            <input type="email" asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group text-sm-center">
            <button type="submit" class="btn btn-primary">Redefinir</button>
                <a role="button" class="btn btn-danger" asp-action="Index" asp-controller="Login">Voltar</a>
        </div>
        
    </form>
</div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
