@model SistemaDeContatos.Models.ViewModels.LoginViewModel;

@{
    Layout = "_LayoutDeslogado";

}
<div class="text-center">
    <h1>Área de login</h1>
</div>


@if (TempData["alertError"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["alertError"];
    </div>
}
@if (TempData["alertSucess"] != null)
{
    <div class="alert alert-success" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["alertSucess"];
    </div>
}

<div class="container">

<div class="box">
    <form asp-action="Logar" asp-controller="Login" method="post">
        <div class="form-group">
            <label for="Login" class="col-form-label">Login</label>
            <input asp-for="Login" class="form-control"/>
                <span asp-validation-for="Login" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Login" class="col-form-label">Senha</label>
            <input type="password" asp-for="Senha" class="form-control" />
            <span asp-validation-for="Senha" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group text-sm-center">
            <button type="submit" class="btn btn-primary">Entrar</button>
        </div>

            <p class="mb-4 text-sm-center mx-auto">
                Esqueceu sua senha? 
                <a asp-action="Redefinir" asp-controller="Login">Redefinir senha</a>
            </p>
    </form>
</div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
