@model SistemaDeContatos.Models.Entities.Usuario;


<a class="navbar-brand text-dark" asp-controller="Home" asp-action="Index">Olá, @Model.Login</a>
<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
        aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
</button>
<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
    <ul class="navbar-nav flex-grow-1">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Contatos" asp-action="Index">Contatos</a>
        </li>
        @if (Model.Perfil == SistemaDeContatos.Models.Enums.PerfilEnum.Admin)
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Usuario" asp-action="Index">Usuários</a>
            </li>
        }
        <li class="nav-item">
            <a class="nav-link align-content-between text-dark" asp-controller="AlterarSenha" asp-action="Index">Alterar senha</a>
        </li>
        <li class="nav-item">
            <a class="nav-link align-content-between text-dark" asp-controller="Login" asp-action="Logout">Logout</a>
        </li>
    </ul>
</div>
