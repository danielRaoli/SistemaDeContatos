@model SistemaDeContatos.Models.ViewModels.AlterSenhaViewModel;

@{
    ViewData["title"] = "Alterar senha";
}

<h1 class="text-sm-center">@ViewData["title"]</h1>

@if (TempData["alertError"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["alertError"];
    </div>
}

@if (TempData["alertSucess"] != null)
{
    <div class="alert alert-success" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["alertSucess"];
    </div>
}

<div >
    <div class="row align-content-md-center">
        <form asp-action="Alterar" asp-controller="AlterarSenha">
            
            <div class="form-group">
                <label for"SenhaAtual" class="form-label">Senha Atual</label>
                <input type="password" asp-for="SenhaAtual"/>
                <span class="text-danger" asp-validation-for="SenhaAtual"></span>
            </div>
            <div class="form-group">
                <label for"SenhaAtual" class="form-label">Nova Senha</label>
                <input type="password" asp-for="NovaSenha" />
                <span class="text-danger" asp-validation-for="NovaSenha"></span>
            </div>
            <div class="form-group">
                <label for"SenhaAtual" class="form-label">Confirmar Senha</label>
                <input type="password" asp-for="ConfirmarNovaSenha" />
                <span class="text-danger" asp-validation-for="ConfirmarNovaSenha"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Alterar</button>
                <a role="button" class="btn btn-danger" asp-action="Index" asp-controller="Login">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }