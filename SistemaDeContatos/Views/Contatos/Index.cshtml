@model IEnumerable<SistemaDeContatos.Models.Entities.Contato>

@{
    ViewData["title"] = "Contatos";
}

<div class="text-center">
    <h1>@ViewData["title"]</h1>
</div>

@if (TempData["alertSucess"] != null)
{
    <div class="alert alert-success" role="alert">
        <button type="button" class="btn btn-danger btn-close btn-sm close-alert" arial-label="Close"></button>
        @TempData["alertSucess"];
    </div>
}

@if (TempData["alertError"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-close btn-sm close-alert" arial-label="Close"></button>
        @TempData["alertError"];
    </div>
}

<a class="btn btn-success" asp-action="Create" asp-controller="Contatos">Cadastrar novo contato</a>






<br />

<div>
    <table class="table table-striped table-hover" id="table-contatos" width="100%">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(s => s.Nome)</th>
                <th>@Html.DisplayNameFor(s => s.Email)</th>
                <th>@Html.DisplayNameFor(s => s.Celular)</th>
                <th>  </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var contato in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => contato.Nome)</td>
                    <td>@Html.DisplayFor(modelItem => contato.Email)</td>
                    <td>@Html.DisplayFor(modelItem => contato.Celular)</td>
                    <td>
                        <a role="link" asp-action="Edit" asp-controller="Contatos" asp-route-id="@contato.Id">Editar</a>
                        <a role="link" asp-action="Delet" asp-controller="Contatos" asp-route-id="@contato.Id">Deletar</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

